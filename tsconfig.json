{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",

    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,

    "checkJs": true,
    "allowJs": true,

    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true,
    "strict": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "coverage"]
}