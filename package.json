{
	"name": "findr-6cs007-backend",
	"version": "0.0.1",
	"description": "Backend for the Findr project",
	"author": "rv-bit",
	"license": "MIT",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "tsc",
		"start": "node dist/index.js",
		"dev": "nodemon src/index.ts",
		"generate": "tsc -p tsconfig.json && drizzle-kit generate --config=drizzle.config.ts",
		"migrate": "drizzle-kit migrate --config=drizzle.config.ts",
		"push": "drizzle-kit push --config=drizzle.config.ts",
		"studio": "drizzle-kit studio --config=drizzle.config.ts",
		"test": "NODE_OPTIONS=--experimental-vm-modules npx jest"
	},
	"dependencies": {
		"@auth/drizzle-adapter": "^1.7.4",
		"@auth/express": "^0.8.4",
		"axios": "^1.7.9",
		"better-auth": "^1.0.20",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.38.2",
		"express": "^4.21.2",
		"express-rate-limit": "^7.4.1",
		"mysql2": "^3.11.5"
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"concurrently": "^9.1.0",
		"drizzle-kit": "^0.30.1",
		"nodemon": "^3.1.9",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.2"
	}
}
